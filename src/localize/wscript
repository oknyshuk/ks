#! /usr/bin/env python


def options(opt):
    return


def configure(conf):
    return


def build(bld):
    libs = [
        "tier0",
        "memoverride",
        "public_common",
        "tier1",
        "tier2",
        "interfaces",
        "vstdlib",
    ]

    includes = []

    source = [
        "localize.cpp",
        "../public/UnicodeFileHelpers.cpp",
    ]

    bld.shlib(
        source=source,
        target="localize",
        features="cxx",
        includes=includes,
        use=libs,
        install_path=bld.env.BINPATH,
        subsystem=bld.env.MSVC_SUBSYSTEM,
        idx=bld.get_taskgen_count(),
    )
